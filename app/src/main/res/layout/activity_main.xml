<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atguigu.mobileplayer1020.MainActivity">

    <!--标题栏-->
    <include layout="@layout/titlebar"/>

    <!--帧布局-->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:background="#11000000"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_local_video"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_local_video_selector"
            android:text="本地视频"/>

        <RadioButton
            android:id="@+id/rb_local_audio"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_local_audio_selector"
            android:text="本地音乐"/>

        <RadioButton
            android:id="@+id/rb_net_audio"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_net_video_selector"
            android:text="网络音乐"/>
        <RadioButton
            android:id="@+id/rb_net_video"
            style="@style/bottom_button_style"
            android:drawableTop="@drawable/rb_net_audio_selector"
            android:text="网络视频"/>



    </RadioGroup>

</LinearLayout>
